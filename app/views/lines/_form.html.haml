= simple_form_for(@line, format: :html) do |f|
  = f.error_notification

  .form-inputs
    = f.input :name
    - if @line.host.present?
      = f.input :host, collection: @hosts, input_html: { class: "host-select" }, selected: @line.host.id
    - else
      = f.input :host, collection: @hosts, input_html: { class: "host-select" }
    = f.input :phone_number
    = f.input :contact_name
    = f.input :contact_phone_number
    = f.input :facebook_url
    = f.label :min_age
    = f.number_field :min_age, min: 18, max: 100, value: 18
    = f.input :logo_url, as: :filepicker, label: "Logo", wrapper_html: { class: "image-picker" }
    = f.input :photos_url, as: :filepicker, label: "Photos", wrapper_html: { class: "image-picker" }
    = f.input :musics, as: :select, input_html: { class: "music-multiselect" }
    = f.input :date, as: :date
    = f.input :opening_hours_start, as: :time, minute_step: 30, input_html: { class: "input-mini" }
    = f.input :opening_hours_end, as: :time, minute_step: 30, input_html: { class: "input-mini" }
    = f.input :day_of_week, collection: Date::DAYNAMES

  .form-actions
    = f.button :submit, class: "btn btn-primary"
